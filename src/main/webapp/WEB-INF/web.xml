        <servlet-class>controller.ConnServlet</servlet-class>
        <load-on-startup>0</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>ConnServlet</servlet-name>
        <url-pattern>/index</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>SearchCarServlet</servlet-name>
        <servlet-class>controller.SearchCarServlet</servlet-class>
        <load-on-startup>0</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>SearchCarServlet</servlet-name>
        <url-pattern>/SearchCarServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>LocationAvailabilityServlet</servlet-name>
        <servlet-class>controller.LocationAvailabilityServlet</servlet-class>
        <load-on-startup>0</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>LocationAvailabilityServlet</servlet-name>
        <url-pattern>/LocationAvailabilityServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>UpdateListingServlet</servlet-name>
        <servlet-class>controller.UpdateListingServlet</servlet-class>
        <load-on-startup>0</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdateListingServlet</servlet-name>
        <url-pattern>/UpdateListingServlet</url-pattern>
    </servlet-mapping>
